<div class="jumbotron">
  <h1>Burgers!</h1>
</div>
<div class="container">
<div class="jumbotron">
<h2>Uneaten Burgers:</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="jumbotron">
<h2>Eaten Burgers:</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
<h2>Add a burger!</h2>
<form class="create-form">
  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Eaten?</label><br>
    <input type="radio" name="devoured"
    value="1" checked>
    Eaten<br>
    <input type="radio" name="devoured" value="0"> Uneaten
  </div>

  <button type="submit">Add burger</button>
</form>
</div>